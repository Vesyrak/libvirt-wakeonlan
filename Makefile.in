prefix = $(DESTDIR)@prefix@
srcdir = @srcdir@
INSTALL = @INSTALL@
distro = "gentoo"

all: libvirtwol

install: all 
	mkdir -p ${prefix}/sbin/
	${INSTALL} ${srcdir}/libvirtwol ${prefix}/sbin/
	mkdir -p $(DESTDIR)/etc/{init.d,conf.d}
	${INSTALL} ${srcdir}/${distro}/init.d/libvirt-wakeonlan ${DESTDIR}/etc/init.d/libvirt-wakeonlan
	${INSTALL} ${srcdir}/${distro}/conf.d/libvirt-wakeonlan ${DESTDIR}/etc/conf.d/libvirt-wakeonlan